<UserControl x:Class="MicrowaveModule.UserControlMemory"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MicrowaveModule"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#FFBFDFFF">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button x:Name="buttonRequestTemperature" FontSize="10" Grid.Row="0" Margin="10,5,10,5" Click="requestTemperature_Click" Background="#FFDDDDDD">
            <Viewbox Margin="15,0,15,0">
                <TextBlock>
                    Посылка запроса температуры
                </TextBlock>
            </Viewbox>
        </Button>
        <Button x:Name="buttonRequestAdcCode" FontSize="10" Grid.Row="1" Margin="10,5,10,5" Click="buttonRequestAdcCode_Click" >
            <Viewbox Margin="15,0,15,0">
                <TextBlock>
                    Посылка запроса кода АЦП
                </TextBlock>
            </Viewbox>
        </Button>
        <Button x:Name="buttonRequestReadingOneCoefficient" FontSize="10" Grid.Row="2" Margin="10,5,10,5">
            <Viewbox Margin="15,0,15,0">
                <TextBlock>
                    Посылка чтения одного коэффициента
                </TextBlock>
            </Viewbox>
        </Button>
        <Button x:Name="buttonRequestReadingOddsTable" FontSize="10" Grid.Row="3" Margin="10,5,10,5" Click="buttonRequestReadingOddsTable_Click">
            <Viewbox Margin="15,0,15,0">
                <TextBlock>
                    Посылка чтения полной таблицы коэффициентов
                </TextBlock>
            </Viewbox>
        </Button>
        <Button x:Name="buttonRecordOfOneCoefficient"  Margin="10,5,10,5" FontSize="10" Grid.Row="4" Click="buttonRecordOfOneCoefficient_Click" >
            <Viewbox Margin="15,0,15,0">
                <TextBlock>
                    Посылка записи одного коэффициента
                </TextBlock>
            </Viewbox>
        </Button>
        <Button x:Name="buttonOddsTableEntry" FontSize="10" Grid.Row="5" Margin="10,5,10,5" Click="buttonOddsTableEntry_Click">
            <Viewbox Margin="15,0,15,0">
                <TextBlock>
                    Посылка записи полной таблицы коэффициентов
                </TextBlock>
            </Viewbox>
        </Button>

        <Border x:Name="borderTemperature" Grid.Column="1" Background="Azure" CornerRadius="15" Margin="10,5,10,5">
            <Grid>
                <TextBlock x:Name="textBlockTemperature" Text="__" TextAlignment="Center" VerticalAlignment="Center"></TextBlock>
            </Grid>
        </Border>

        <Border x:Name="borderADC" Grid.Column="1" Grid.Row="1" Background="Azure" CornerRadius="15" Margin="10,5,10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label Height="25" Content="high" HorizontalAlignment="Center" Grid.Row="0"></Label>
                    <TextBlock x:Name="textBlockAdcHigh" Text="_" Height="20" TextAlignment="Center" VerticalAlignment="Center" Grid.Row="1"></TextBlock>
                </Grid>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label Height="25" Content="low" HorizontalAlignment="Center"></Label>
                    <TextBlock x:Name="textBlockAdcLow" Text="_"  Height="20" TextAlignment="Center" VerticalAlignment="Center"  Grid.Row="1"></TextBlock>
                </Grid>
            </Grid>
        </Border>
        <Border x:Name="borderRequestReadingOneCoefficient" Grid.Column="1" Grid.Row="2" Grid.RowSpan="2" Background="Azure" CornerRadius="15" Margin="10,5,10,5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*"></RowDefinition>
                    <RowDefinition Height="9*"></RowDefinition>
                </Grid.RowDefinitions>
                <Label Content="адрес" Grid.Row="0 "></Label>
                <Grid Grid.Row="1" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*"></ColumnDefinition>
                        <ColumnDefinition Width="3*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="textBoxRequestReadingOneCoefficient" Grid.Row="0" Grid.RowSpan="2" Text="0" MaxLength="5" FontSize="25" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" TextChanged="textBoxRequestReadingOneCoefficient_TextChanged"   />
                    <Button x:Name= "buttonUpRequestReadingOneCoefficient" Grid.Column="1" Grid.Row="0" Content="▲" FontSize="15"  Click="buttonUpRequestReadingOneCoefficient_Click"></Button>
                    <Button x:Name= "buttonDownRequestReadingOneCoefficient" Grid.Column="1" Grid.Row="1" Content="▼"  FontSize="15" Click="buttonDownRequestReadingOneCoefficient_Click"  ></Button>
                </Grid>
            </Grid>
        </Border>

        <Border x:Name="borderRequestWriteOneCoefficient" Grid.Column="1" Grid.Row="4" Grid.RowSpan="2" Background="Azure" CornerRadius="15" Margin="10,5,10,5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="4*"></RowDefinition>
                    <RowDefinition Height="9*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid Grid.Row="1" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*"></ColumnDefinition>
                        <ColumnDefinition Width="3*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <TextBox x:Name="textBoxRequestWriteOneCoefficient" Grid.Row="0" Grid.RowSpan="2" Text="0" MaxLength="5" FontSize="25" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" TextChanged="textBoxRequestWriteOneCoefficient_TextChanged"  />
                    <Button x:Name= "buttonUpRequestWriteOneCoefficient" Content="▲" FontSize="15" Grid.Column="1" Click="buttonUpRequestWriteOneCoefficient_Click" ></Button>
                    <Button x:Name= "buttonDownRequestWriteOneCoefficient" Content="▼"  FontSize="15" Grid.Column="1" Grid.Row="1" Click="buttonDownRequestWriteOneCoefficient_Click"  ></Button>
                </Grid>
                <Label Content="коэффициент" Grid.Row="0"></Label>
            </Grid>
        </Border>
    </Grid>
</UserControl>
